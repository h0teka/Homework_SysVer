module mux_4_1
(
  input  [3:0] d0, d1, d2, d3, // 4 входных сигнала по 4 бита
  input  [1:0] sel,            // 2-битный селектор
  output [3:0] y               // 4-битный выход
);

  // Используем вложенные тернарные операторы для выбора
  assign y = (sel == 2'b00) ? d0 :
             (sel == 2'b01) ? d1 :
             (sel == 2'b10) ? d2 :
                              d3;

endmodule
